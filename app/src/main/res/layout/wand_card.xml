<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/score"
    android:background="@android:color/transparent">

    <ImageView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/score_bg"
        app:layout_constraintStart_toStartOf="@id/score"
        app:layout_constraintEnd_toEndOf="@id/score"
        app:layout_constraintTop_toTopOf="@id/score"
        app:layout_constraintBottom_toBottomOf="@id/score"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="520dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/wand_card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:layout_marginHorizontal="20dp"
            android:text=" The wand chooses the wizard."
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="@font/hp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:layout_marginHorizontal="62dp"
            android:text=" Here is your wand..."
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:fontFamily="@font/hp"/>

        <ImageView
            android:id="@+id/wand_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="62dp"
            app:srcCompat="@drawable/one"/>

        <TextView
            android:id="@+id/wand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/hp"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/white"
            android:outlineSpotShadowColor="@color/white"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:text=""
            android:textColor="@color/white"
            android:textSize="25dp" />




        <TextView
            android:id="@+id/mainmenu"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:outlineSpotShadowColor="@color/white"
            android:shadowColor="#FFFFFF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:layout_marginHorizontal="55dp"
            android:textColor="#FFFFFF"
            android:text="Main Menu"
            android:textSize="26dp"
            android:fontFamily="@font/hp"
            android:background="@drawable/wand_card_btn" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>