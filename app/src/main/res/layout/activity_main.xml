<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen_bg"
    tools:context=".MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/banner"
            android:layout_width="0dp"
            android:layout_height="135dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/griffindor_banner" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/hp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:shadowColor="#AE000000"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:text="Sanak Maitra"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/housebanner"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/of"
            app:srcCompat="@drawable/gryffindor" />

        <TextView
            android:id="@+id/of"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/hp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:shadowColor="#AE000000"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:text="of"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/gamename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/hp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:shadowColor="#AE000000"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="5"
            android:text="Harry Potter World"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner" />

        <ImageView
            android:id="@+id/hpquizimage"
            android:layout_width="0dp"
            android:layout_height="133dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:alpha="1"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamename"
            app:layout_constraintVertical_bias="0.19"
            app:srcCompat="@drawable/quiz_" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="364dp"
            android:layout_height="64dp"
            android:fontFamily="@font/hp"
            android:foregroundGravity="center"
            android:gravity="center_horizontal"
            android:text="Wizarding  Quiz"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/hpquizimage"
            app:layout_constraintEnd_toEndOf="@+id/hpquizimage"
            app:layout_constraintStart_toStartOf="@+id/hpquizimage"
            app:layout_constraintTop_toTopOf="@+id/hpquizimage"
            app:layout_constraintVertical_bias="1.0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7">


            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/charquizimage"
                        android:layout_width="300dp"
                        android:layout_height="130dp"
                        android:alpha="1"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="25dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.19"
                        app:srcCompat="@drawable/quiz_" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:fontFamily="@font/hp"
                            android:foregroundGravity="center"
                            android:gravity="center_horizontal"
                            android:text="Wizarding  Quiz"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="40dp"
                            app:layout_constraintBottom_toBottomOf="@id/textView8"
                            app:layout_constraintEnd_toEndOf="@+id/charquizimage"
                            app:layout_constraintStart_toStartOf="@+id/charquizimage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/patronusquizimage"
                            android:layout_width="250dp"
                            android:layout_height="130dp"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            android:layout_marginLeft="25dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.19"
                            app:srcCompat="@drawable/quiz_" />

                        <TextView
                            android:id="@+id/patronusquiz"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:fontFamily="@font/hp"
                            android:foregroundGravity="center"
                            android:gravity="center_horizontal"
                            android:text="Wizarding  Quiz"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="40dp"
                            app:layout_constraintBottom_toBottomOf="@id/patronusquiz"
                            app:layout_constraintEnd_toEndOf="@+id/patronusquizimage"
                            app:layout_constraintStart_toStartOf="@+id/patronusquizimage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/wandquizimage"
                            android:layout_width="250dp"
                            android:layout_height="130dp"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            android:layout_marginLeft="25dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.19"
                            app:srcCompat="@drawable/quiz_" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:fontFamily="@font/hp"
                            android:foregroundGravity="center"
                            android:gravity="center_horizontal"
                            android:text="Wizarding  Quiz"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="40dp"
                            app:layout_constraintBottom_toBottomOf="@id/textView9"
                            app:layout_constraintEnd_toEndOf="@+id/wandquizimage"
                            app:layout_constraintStart_toStartOf="@+id/wandquizimage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>