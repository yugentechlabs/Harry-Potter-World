<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainscreen_bg"
    tools:context=".Activities.MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/banner"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:scaleType="fitXY"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/griffindor_banner" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/hp"
            android:visibility="invisible"
            android:text="Sanak Maitra"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/housebanner"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/of"
            app:srcCompat="@drawable/gryffindor" />

        <TextView
            android:id="@+id/of"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:fontFamily="@font/hp"
            android:visibility="invisible"
            android:text="of"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" />

        <TextView
            android:id="@+id/gamename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hp"
            android:outlineAmbientShadowColor="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:shadowColor="#6091FF"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:text="Harry Potter World"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="45dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.416"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="307dp" />

        <ImageView
            android:id="@+id/hpquizimage"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:alpha="1"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamename"
            app:layout_constraintVertical_bias="0.067"
            app:srcCompat="@drawable/quiz_" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:fontFamily="@font/hp"
            android:foregroundGravity="bottom"
            android:gravity="center_horizontal"
            android:text="Wizarding  Quiz"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:shadowColor="#6091FF"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="2"
            app:layout_constraintBottom_toBottomOf="@+id/hpquizimage"
            app:layout_constraintEnd_toEndOf="@+id/hpquizimage"
            app:layout_constraintStart_toStartOf="@+id/hpquizimage"
            app:layout_constraintTop_toTopOf="@+id/hpquizimage"
            app:layout_constraintVertical_bias="1.0" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7">


            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="140dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sortquizimage"
                            android:layout_width="300dp"
                            android:layout_height="110dp"
                            android:layout_marginLeft="25dp"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.19"
                            app:srcCompat="@drawable/sorting" />

                        <TextView
                            android:id="@+id/sorting"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:fontFamily="@font/hp"
                            android:foregroundGravity="center"
                            android:gravity="center_horizontal"
                            android:text="What is your house?"
                            android:shadowColor="#6091FF"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="2"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="35dp"
                            app:layout_constraintBottom_toBottomOf="@id/sorting"
                            app:layout_constraintEnd_toEndOf="@+id/sortquizimage"
                            app:layout_constraintStart_toStartOf="@+id/sortquizimage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/charquizimage"
                            android:layout_width="300dp"
                            android:layout_height="110dp"
                            android:layout_marginLeft="25dp"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.19"
                            app:srcCompat="@drawable/character_" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:fontFamily="@font/hp"
                            android:foregroundGravity="center"
                            android:gravity="center_horizontal"
                            android:text="Which charater are you?"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="35dp"
                            android:shadowColor="#6091FF"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="2"
                            app:layout_constraintBottom_toBottomOf="@id/textView8"
                            app:layout_constraintEnd_toEndOf="@+id/charquizimage"
                            app:layout_constraintStart_toStartOf="@+id/charquizimage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/patronusquizimage"
                            android:layout_width="300dp"
                            android:layout_height="110dp"
                            android:layout_marginLeft="25dp"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.19"
                            app:srcCompat="@drawable/patronus_" />

                        <TextView
                            android:id="@+id/patronusquiz"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:fontFamily="@font/hp"
                            android:foregroundGravity="center"
                            android:gravity="center_horizontal"
                            android:text="What is your Patronus?"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="35dp"
                            android:shadowColor="#6091FF"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="2"
                            app:layout_constraintBottom_toBottomOf="@id/patronusquiz"
                            app:layout_constraintEnd_toEndOf="@+id/patronusquizimage"
                            app:layout_constraintStart_toStartOf="@+id/patronusquizimage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp">

                        <ImageView
                            android:id="@+id/wandquizimage"
                            android:layout_width="300dp"
                            android:layout_height="110dp"
                            android:layout_marginLeft="25dp"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintVertical_bias="0.19"
                            app:srcCompat="@drawable/wand" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="38dp"
                            android:fontFamily="@font/hp"
                            android:foregroundGravity="center"
                            android:gravity="center_horizontal"
                            android:text="Find your wand"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="35dp"
                            android:shadowColor="#6091FF"
                            android:shadowDx="4"
                            android:shadowDy="4"
                            android:shadowRadius="2"
                            app:layout_constraintBottom_toBottomOf="@id/textView9"
                            app:layout_constraintEnd_toEndOf="@+id/wandquizimage"
                            app:layout_constraintStart_toStartOf="@+id/wandquizimage" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <ImageView
            android:id="@+id/owl_btn"
            android:layout_width="51dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="25dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/owl_btn"
            tools:layout_editor_absoluteY="764dp"
            app:layout_constraintEnd_toStartOf="@id/train_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            />

        <ImageView
            android:id="@+id/train_btn"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:srcCompat="@drawable/train_btn"
            tools:layout_editor_absoluteX="126dp"
            android:visibility="gone"
            tools:layout_editor_absoluteY="764dp"
            app:layout_constraintStart_toEndOf="@id/owl_btn"
            app:layout_constraintEnd_toStartOf="@id/wizard_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"/>

        <ImageView
            android:id="@+id/wizard_btn"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:srcCompat="@drawable/wizard"
            tools:layout_editor_absoluteX="217dp"
            tools:layout_editor_absoluteY="763dp"
            app:layout_constraintStart_toEndOf="@id/train_btn"
            app:layout_constraintEnd_toStartOf="@id/settings_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"/>

        <ImageView
            android:id="@+id/settings_btn"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/settings"
            tools:layout_editor_absoluteY="763dp"
            app:layout_constraintStart_toEndOf="@id/wizard_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/gamename"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/banner"
            app:srcCompat="@drawable/logo_shadowed" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>