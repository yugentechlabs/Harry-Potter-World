<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WizardingQuiz"
    android:background="@drawable/wizarding"
    >

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_btn" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Level 1"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:fontFamily="@font/hp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/question_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginBottom="20dp"
        android:text="Question 1"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:fontFamily="@font/hp"
        app:layout_constraintTop_toBottomOf="@id/level"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/question"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>



    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/beneg___"
        android:text="Wizarding Quiz"
        android:paddingHorizontal="25dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:textColor="@color/white"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/one"
        app:layout_constraintTop_toBottomOf="@id/question_number" />


    <TextView
        android:id="@+id/one"
        android:paddingHorizontal="38dp"
        android:paddingVertical="20dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/answer_btn"
        android:fontFamily="@font/beneg___"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:gravity="center_vertical"
        android:shadowDy="4"
        android:shadowRadius="5"
        app:layout_constraintTop_toBottomOf="@id/question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/two"
        android:layout_marginStart="30dp"
        android:text="Wizard"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="253dp" />

    <TextView
        android:paddingEnd="38dp"
        android:id="@+id/two"
        android:paddingVertical="20dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/answer_btn"
        android:fontFamily="@font/beneg___"
        android:gravity="right"
        android:shadowColor="#000000"
        android:shadowDx="4"

        android:shadowDy="4"
        android:shadowRadius="5"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:text="Wizard"
        app:layout_constraintBottom_toTopOf="@id/three_image"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/three_image"
        android:paddingStart="38dp"
        android:paddingVertical="20dp"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:background="@drawable/answer_btn"
        android:fontFamily="@font/beneg___"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/four_image"
        android:layout_marginStart="30dp"
        android:text="Wizard"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/four_image"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/answer_btn"
        android:fontFamily="@font/beneg___"
        android:gravity="right"
        android:paddingVertical="20dp"
        android:paddingEnd="38dp"
        android:text="Wizard"
        android:shadowColor="#000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:layout_marginBottom="70dp"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/three_image" />


</androidx.constraintlayout.widget.ConstraintLayout>