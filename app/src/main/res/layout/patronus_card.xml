<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/score"
    android:background="@android:color/transparent">

    <ImageView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/score_bg"
        app:layout_constraintStart_toStartOf="@id/score"
        app:layout_constraintEnd_toEndOf="@id/score"
        app:layout_constraintTop_toTopOf="@id/score"
        app:layout_constraintBottom_toBottomOf="@id/score"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:background="@drawable/patronus_card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/teal_200"
            android:outlineSpotShadowColor="@color/teal_200"
            android:shadowColor="#58FAE1"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:layout_marginHorizontal="62dp"
            android:text=" Congratulations!"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:fontFamily="@font/hp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:outlineAmbientShadowColor="@color/teal_200"
            android:outlineSpotShadowColor="@color/teal_200"
            android:shadowColor="#58FAE1"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:layout_marginHorizontal="62dp"
            android:text=" Your patronus is..."
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:fontFamily="@font/hp"/>

        <ImageView
            android:id="@+id/patronus_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="62dp"
            app:srcCompat="@drawable/cat"/>

        <TextView
            android:id="@+id/patronus_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:outlineAmbientShadowColor="@color/teal_200"
            android:outlineSpotShadowColor="@color/teal_200"
            android:shadowColor="#58FAE1"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20"
            android:layout_marginHorizontal="62dp"
            android:text=" Cat"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:fontFamily="@font/hp"/>




        <TextView
            android:id="@+id/mainmenu"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginHorizontal="55dp"
            android:textColor="#35545E"
            android:text="Main Menu"
            android:textSize="26dp"
            android:fontFamily="@font/hp"
            android:background="@drawable/cyan_rounded_btn" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>