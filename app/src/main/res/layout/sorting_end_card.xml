<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/score"
    android:background="@android:color/transparent">

    <ImageView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/score_bg"
        app:layout_constraintStart_toStartOf="@id/score"
        app:layout_constraintEnd_toEndOf="@id/score"
        app:layout_constraintTop_toTopOf="@id/score"
        app:layout_constraintBottom_toBottomOf="@id/score"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/score_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="62dp"
            android:text=" Congratulations!"
            android:layout_marginTop="75dp"
            android:textSize="35dp"
            android:fontFamily="@font/hp"/>

        <ImageView
            android:id="@+id/house_name"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="62dp"
            app:srcCompat="@drawable/gryffindor"/>

        <TextView
            android:id="@+id/house_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_marginHorizontal="62dp"
            android:textSize="25dp"
            android:fontFamily="@font/beneg___"
            android:layout_marginBottom="5dp"/>


        <TextView
            android:id="@+id/mainmenu"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginHorizontal="55dp"
            android:textColor="@android:color/white"
            android:text="Main Menu"
            android:textSize="20dp"
            android:fontFamily="@font/hp"
            android:background="@drawable/main_menu" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>