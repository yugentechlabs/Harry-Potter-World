<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/stairs_bg">


    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hp"
        android:outlineAmbientShadowColor="@color/black"
        android:outlineSpotShadowColor="@color/black"
        android:shadowColor="#05070C"
        android:shadowDx="4"
        android:shadowDy="4"
        android:paddingHorizontal="30dp"
        android:shadowRadius="5"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:text="How would you want to be remembered after you die?"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="45dp"
        app:layout_constraintBottom_toTopOf="@id/options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/options"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="350dp">

                    <ImageView
                        android:id="@+id/one"
                        android:layout_width="240dp"
                        android:layout_height="280dp"
                        android:layout_marginLeft="25dp"
                        android:alpha="1"
                        android:outlineAmbientShadowColor="@color/black"
                        android:outlineSpotShadowColor="@color/black"
                        android:shadowColor="#05070C"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="5"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/hermione" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:fontFamily="@font/hp"
                        android:foregroundGravity="center"
                        android:gravity="center_horizontal"
                        android:text="GENIUS"
                        android:shadowColor="#6091FF"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="2"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="35dp"
                        app:layout_constraintTop_toBottomOf="@id/one"
                        app:layout_constraintEnd_toEndOf="@+id/one"
                        app:layout_constraintStart_toStartOf="@+id/one" />



                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/two"
                        android:layout_width="260dp"
                        android:layout_height="280dp"
                        android:layout_marginLeft="25dp"
                        android:alpha="1"
                        android:outlineAmbientShadowColor="@color/black"
                        android:outlineSpotShadowColor="@color/black"
                        android:shadowColor="#05070C"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="5"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/neville" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:fontFamily="@font/hp"
                        android:foregroundGravity="center"
                        android:gravity="center_horizontal"
                        android:text="BRAVE"
                        android:shadowColor="#6091FF"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="2"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="35dp"
                        app:layout_constraintTop_toBottomOf="@id/two"
                        app:layout_constraintEnd_toEndOf="@+id/two"
                        app:layout_constraintStart_toStartOf="@+id/two" />

                </androidx.constraintlayout.widget.ConstraintLayout>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/three"
                        android:layout_width="260dp"
                        android:layout_height="280dp"
                        android:layout_marginLeft="25dp"
                        android:alpha="1"
                        android:outlineAmbientShadowColor="@color/black"
                        android:outlineSpotShadowColor="@color/black"
                        android:shadowColor="#05070C"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="5"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/luna" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:fontFamily="@font/hp"
                        android:foregroundGravity="center"
                        android:gravity="center_horizontal"
                        android:text="UNIQUE"
                        android:shadowColor="#6091FF"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="2"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="35dp"
                        app:layout_constraintTop_toBottomOf="@id/three"
                        app:layout_constraintEnd_toEndOf="@+id/three"
                        app:layout_constraintStart_toStartOf="@+id/three" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="25dp">

                    <ImageView
                        android:id="@+id/four"
                        android:layout_width="240dp"
                        android:layout_height="280dp"
                        android:layout_marginLeft="25dp"
                        android:alpha="1"
                        android:outlineAmbientShadowColor="@color/black"
                        android:outlineSpotShadowColor="@color/black"
                        android:shadowColor="#05070C"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="5"
                        android:scaleType="fitCenter"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:srcCompat="@drawable/ron" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:fontFamily="@font/hp"
                        android:foregroundGravity="center"
                        android:gravity="center_horizontal"
                        android:text="LOYAL"
                        android:shadowColor="#6091FF"
                        android:shadowDx="4"
                        android:shadowDy="4"
                        android:shadowRadius="2"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="35dp"
                        app:layout_constraintTop_toBottomOf="@id/four"
                        app:layout_constraintEnd_toEndOf="@+id/four"
                        app:layout_constraintStart_toStartOf="@+id/four" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>